{
    "analysis": {
        "analyzer": {
            "keyword_lowercase": {
                "filter": "lowercase",
                "tokenizer": "keyword"
            },
            "gsearch_grow_analyzer": {
                "type": "custom",
                "tokenizer": "standard",
                "filter": [
                    "gsearch_english_possessive_stemmer",
                    "lowercase",
                    "gsearch_english_stop",
                    "gsearch_light_english_stemmer", 
                    "asciifolding" 
                ]
            },
            "gsearch_standard_analyzer": {
                "type": "custom",
                "tokenizer": "standard",
                "filter": [
                    "lowercase",
                    "asciifolding"
                ]
            }
        },
        "filter": {
            "gsearch_english_stop": {
              "type":       "stop",
              "stopwords":  "_english_"
            },
            "gsearch_light_english_stemmer": {
              "type":       "stemmer",
              "language":   "light_english" 
            },
            "gsearch_english_possessive_stemmer": {
              "type":       "stemmer",
              "language":   "possessive_english"
            }   
        }         
    }
}
