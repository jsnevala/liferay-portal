@component-name = "portal-business-productivity-ee"
definition {
	property portal.release = "false";
	property portal.upstream = "true";
	property test.run.environment = "EE";
	property testray.main.component.name = "Rules";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			Page.tearDownPG();
		}
	}

	@priority = "4"
	test ViewWebContentInSampleDrools {
		property osgi.modules.includes = "portal-rules-engine-sample-web";

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "Server Administration"
		);

		ServerAdministration.executeServerResourcesActions(
			actionsDescription = "Reindex all search indexes."
		);

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.gotoEditCP(userScreenName = "test");

		Organization.gotoIdentificationCP();

		Organization.addAddressCP(
			orgAddressCity = "Diamond Bar",
			orgAddressCountry = "United States",
			orgAddressPostal = "91765",
			orgAddressRegion = "California",
			orgAddressStreet = "1400 Montefino Ave",
			orgAddressType = "Personal"
		);

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Tags"
		);

		Tag.addCP(tagName = "americas");

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Web Content"
		);

		WebContentNavigator.gotoAddCP();

		WebContent.addWithTagCP(
			tagNameList = "americas",
			webContentContent = "Web Content Content",
			webContentTitle = "Web Content Title"
		);

		Navigator.openURL();

		Page.add(pageName = "Drools Page");

		Navigator.gotoPage(pageName = "Drools Page");

		Portlet.addPG(portletName = "Sample Drools");

		WebContent.viewPGViaWCD(
			webContentContent = "Web Content Content",
			webContentTitle = "Web Content Title"
		);
	}
}