@component-name = "portal-security"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Antisamy Hook";
	var pageName = "Antisamy Test Page";
	var portletName = "Wiki";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Page.add(pageName = "${pageName}");

		Navigator.gotoPage(pageName = "${pageName}");

		Portlet.addPG(portletName = "${portletName}");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			WikiPage.tearDownCP();

			Page.tearDownPG();
		}
	}

	@priority = "4"
	test AddWikiFrontPageContentJavascript {

		var wikiPageContent = '''
				<p id='demo'>PASS</p>

				<script type='text/javascript'>
					document.getElementById('demo').innerHTML = 'FAIL';
				</script>
			''';
		var wikiPageText = "PASS";

		WikiPage.addFrontPagePG(
			htmlSource = "true",
			pageName = "${pageName}",
			wikiPageContent = "${wikiPageContent}",
			wikiPageText = "${wikiPageText}"
		);
	}
}