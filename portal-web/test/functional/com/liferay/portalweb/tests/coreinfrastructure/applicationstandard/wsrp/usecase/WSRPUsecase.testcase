@component-name = "portal-legacy"
definition {
	property dummy.socket.proxy.disabled = "true";
	property portal.release = "true";
	property portal.upstream = "true";
	property test.run.environment = "EE";
	property testray.main.component.name = "WSRP";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			Page.tearDownPG();

			WSRP.tearDownCP();
		}
	}

	@priority = "4"
	test AddWSRPUnitConverter {
		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "WSRP Admin"
		);

		WSRP.addProducerCP(
			portletsAvailableSelect = "Unit Converter",
			producerName = "Producer Demo"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "WSRP Admin"
		);

		WSRP.addConsumerCP(
			consumerName = "Consumer Demo",
			producerName = "Producer Demo"
		);

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "WSRP Admin"
		);

		WSRP.addConsumerPortletCP(
			consumerName = "Consumer Demo",
			consumerPortletName = "WSRP Unit Converter",
			consumerPortletType = "Unit Converter"
		);

		var key_consumerPortletName = "WSRP Unit Converter";

		AssertTextEquals(
			locator1 = "WSRPAdminManagePortlets#PORTLET_TABLE_NAME",
			value1 = "WSRP Unit Converter"
		);

		AssertTextEquals(
			locator1 = "WSRPAdminManagePortlets#PORTLET_TABLE_REMOTE_PORTLET",
			value1 = "Unit Converter"
		);

		AssertElementPresent(locator1 = "WSRPAdminManagePortlets#PORTLET_TABLE_DELETE");

		Page.add(pageName = "WSRP Page");

		Navigator.gotoPage(pageName = "WSRP Page");

		Portlet.addPG(portletName = "WSRP Unit Converter");

		UnitConverter.convertPG(
			initialUnit = "Inch",
			initialValue = "12",
			targetUnit = "Foot",
			targetValue = "1.0",
			unitType = "Length"
		);
	}
}