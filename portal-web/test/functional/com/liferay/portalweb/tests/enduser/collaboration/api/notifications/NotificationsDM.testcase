@component-name = "portal-collaboration"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property custom.properties = "default.layout.template.id=1_column";
	property testray.main.component.name = "Notifications";
	var pageName = "Documents and Media Page";
	var portletName = "Documents and Media";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Page.add(pageName = "Documents and Media Page");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Portlet.addPG(portletName = "Documents and Media");

		DMDocument.enableActionsMenuOnPortlet();

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Click(locator1 = "Icon#DISPLAY_STYLE_DESCRIPTIVE");

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.addCP(
			userEmailAddress = "userea@liferay.com",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn"
		);

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.editPasswordCP(
			password = "password",
			userEmailAddress = "userea@liferay.com",
			userScreenName = "usersn"
		);

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.assignRegularRoleCP(roleName = "Administrator", userScreenName = "usersn");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			DMDocument.tearDownCP();

			Page.tearDownPG();

			NotificationsPortlet.tearDownUserDeliveries();

			User.tearDownCP();
		}
	}

	@priority = "4"
	test ViewNoWebsiteNotificationForNewDocumentInFolder {
		Navigator.gotoPage(pageName = "Documents and Media Page");

		NotificationsPortlet.gotoNotificationDelivery(notificationCount = "0");

		IFrame.selectDialogFrame();

		NotificationsPortlet.disableUserDeliveries(
			actionType = "Adds",
			contentType = "Documents and Media",
			notificationType = "Website"
		);

		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMFolder.addPG(
			dmFolderDescription = "DM Folder Description",
			dmFolderName = "DM Folder Name"
		);

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMFolder.subscribePG();

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "userea@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMDocument.addPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.docx",
			dmDocumentTitle = "DM Document Title"
		);

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "test@liferay.com");

		Notifications.viewBadgeCount(notificationCount = "0");
	}

	@priority = "4"
	test ViewNoWebsiteNotificationForUpdatedDocumentInFolder {
		Navigator.gotoPage(pageName = "Documents and Media Page");

		NotificationsPortlet.gotoNotificationDelivery(notificationCount = "0");

		IFrame.selectDialogFrame();

		NotificationsPortlet.disableUserDeliveries(
			actionType = "Updates",
			contentType = "Documents and Media",
			notificationType = "Website"
		);

		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMFolder.addPG(
			dmFolderDescription = "DM Folder Description",
			dmFolderName = "DM Folder Name"
		);

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMFolder.subscribePG();

		DMDocument.addPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.docx",
			dmDocumentTitle = "DM Document Title"
		);

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "userea@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMDocument.editPG(
			dmDocumentTitle = "DM Document Title",
			dmDocumentTitleEdit = "DM Document Title Edit"
		);

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "test@liferay.com");

		Notifications.viewBadgeCount(notificationCount = "0");
	}

	@priority = "4"
	test ViewWebsiteNotificationForNewDocumentInFolder {
		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMFolder.addPG(
			dmFolderDescription = "DM Folder Description",
			dmFolderName = "DM Folder Name"
		);

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMFolder.subscribePG();

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "userea@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMDocument.addPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.docx",
			dmDocumentTitle = "DM Document Title"
		);

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "test@liferay.com");

		Notifications.viewBadgeCount(notificationCount = "1");

		Notifications.gotoNotifications();

		Notifications.viewNewContent(
			assetType = "document",
			contentBody = "DM Document Title",
			user = "userfn userln"
		);

		Notifications.navigateToContent(contentBody = "DM Document Title");

		DMDocument.viewDocumentTitleCmdPG(dmDocumentTitle = "DM Document Title");

		Notifications.viewBadgeCount(notificationCount = "0");
	}

	@priority = "4"
	test ViewWebsiteNotificationForUpdatedDocumentInFolder {
		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMFolder.addPG(
			dmFolderDescription = "DM Folder Description",
			dmFolderName = "DM Folder Name"
		);

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMFolder.subscribePG();

		DMDocument.addPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.docx",
			dmDocumentTitle = "DM Document Title"
		);

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "userea@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		DMPortlet.setDescriptiveView();

		DMNavigator.gotoFolder(dmFolderName = "DM Folder Name");

		DMDocument.editPG(
			dmDocumentTitle = "DM Document Title",
			dmDocumentTitleEdit = "DM Document Title Edit"
		);

		Notifications.viewBadgeCount(notificationCount = "0");

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "test@liferay.com");

		Notifications.viewBadgeCount(notificationCount = "1");

		Notifications.gotoNotifications();

		Notifications.viewUpdatedContent(
			assetType = "document",
			contentBody = "DM Document Title Edit",
			user = "userfn userln"
		);

		Notifications.navigateToContent(contentBody = "DM Document Title Edit");

		DMDocument.viewDocumentTitleCmdPG(dmDocumentTitle = "DM Document Title Edit");

		Notifications.viewBadgeCount(notificationCount = "0");
	}
}