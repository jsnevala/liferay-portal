@component-name = "portal-util-misc"
definition {
	property osgi.app.includes = "loan-calculator";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Util";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Page.add(pageName = "Loan Calculator Page");

		Navigator.gotoPage(pageName = "Loan Calculator Page");

		Portlet.addPG(portletName = "Loan Calculator");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@priority = "2"
	test CalculateLoanAmounts {
		Navigator.gotoPage(pageName = "Loan Calculator Page");

		LoanCalculator.calculatePG(
			loanAmount = "400,000",
			loanInterestPaid = "526,421",
			loanInterestRate = "10.00",
			loanMonthlyPayment = "3,860",
			loanTotalPaid = "926,421",
			loanYears = "20"
		);
	}
}