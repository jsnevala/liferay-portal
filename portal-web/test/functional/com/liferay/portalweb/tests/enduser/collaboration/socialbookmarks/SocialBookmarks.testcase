@component-name = "portal-collaboration"
definition {
	property custom.properties = "default.layout.template.id=1_column";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Social Bookmarks";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			BlogsEntry.tearDownCP();

			Blogs.tearDownConfigurationDisplaySettingsPG(
				pageName = "Blogs Page",
				portletName = "Blogs"
			);

			KBArticle.tearDownCP();

			Page.tearDownPG();
		}
	}

	@priority = "4"
	test ChangeSocialBookmarkSitesForKBArticle {
		property osgi.app.includes = "social-bookmarks, knowledge-base";

		Page.add(pageName = "Knowledge Base Display Page");

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		Portlet.addPG(portletName = "Knowledge Base Display");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Knowledge Base"
		);

		KBArticle.addCP(
			kbArticleContent = "Knowledge Base Article Content",
			kbArticleTitle = "Knowledge Base Article Title"
		);

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		KBArticle.viewViaKBDisplayPG(
			kbArticleContent = "Knowledge Base Article Content",
			kbArticleTitle = "Knowledge Base Article Title"
		);

		KBArticle.configureKBSocialBookmarkSites(
			enableSocialBookmarkSites = "twitter,facebook,plusone,addthis,delicious,digg,evernote,linkedin,newsvine,reddit,slashdot,stumbleupon,tuenti"
		);

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		Click(locator1 = "Icon#SHARE");

		for (var socialBookmarkSites : list "Twitter,Facebook,LinkedIn,Delicious,Digg,Evernote,Newsvine,Reddit,Slashdot,StumbleUpon,Tuenti") {
			KBArticle.viewEnabledKBSocialBookmarkSites(
				socialBookmarkSite = "${socialBookmarkSites}"
			);
		}

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		KBArticle.viewViaKBDisplayPG(
			kbArticleContent = "Knowledge Base Article Content",
			kbArticleTitle = "Knowledge Base Article Title"
		);

		KBArticle.configureKBSocialBookmarkSites(
			disableSocialBookmarkSites = "twitter,newsvine,reddit,slashdot,stumbleupon,tuenti",
			enableSocialBookmarkSites = "facebook,plusone,addthis,delicious,digg,evernote,linkedin"
		);

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		for (var socialBookmarkSites : list "Facebook,AddThis,LinkedIn,Delicious,Digg,Evernote") {
			KBArticle.viewEnabledKBSocialBookmarkSites(
				socialBookmarkSite = "${socialBookmarkSites}"
			);
		}

		for (var socialBookmarkSites : list "Twitter,Newsvine,Reddit,Slashdot,StumbleUpon,Tuenti") {
			KBArticle.viewDisabledKBSocialBookmarkSites(
				socialBookmarkSite = "${socialBookmarkSites}"
			);
		}
	}

	@priority = "3"
	test ViewBlogsEntryWithSocialBookmarksSites {
		property osgi.app.includes = "social-bookmarks";
		property test.assert.warning.exceptions = "true";

		Page.add(pageName = "Blogs Page");

		Navigator.gotoPage(pageName = "Blogs Page");

		Portlet.addPG(portletName = "Blogs");

		Navigator.gotoPage(pageName = "Blogs Page");

		Blogs.addEntry(
			entryContent = "Blogs Entry Content",
			entrySubtitle = "Blogs Entry Subtitle",
			entryTitle = "Blogs Entry Title"
		);

		Blogs.enableSocialBookmarkSites(
			socialBookmarkSites = "twitter,facebook,plusone,addthis,delicious,digg,evernote,linkedin,newsvine,reddit,slashdot,stumbleupon,tuenti"
		);

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsNavigator.gotoEntryPG(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title"
		);

		BlogsEntry.viewEnabledSocialBookmarkSites(
			socialBookmarkSites = "Twitter,Facebook,LinkedIn,Delicious,Digg,Evernote,Newsvine,Reddit,Slashdot,StumbleUpon,Tuenti"
		);

		Blogs.disableSocialBookmarkSites(
			socialBookmarkSites = "twitter,facebook,plusone,addthis,delicious,digg,evernote,linkedin,newsvine,reddit,slashdot,stumbleupon,tuenti"
		);

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsEntry.viewDisabledSocialBookmarkSites();
	}

	@priority = "3"
	test ViewKBArticleWithAllSocialBookmarkSites {
		property osgi.app.includes = "social-bookmarks, knowledge-base";
		var socialBookmarkSites = "twitter,facebook,plusone,addthis,delicious,digg,evernote,linkedin,newsvine,reddit,slashdot,stumbleupon,tuenti";

		Page.add(pageName = "Knowledge Base Display Page");

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		Portlet.addPG(portletName = "Knowledge Base Display");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Knowledge Base"
		);

		KBArticle.addCP(
			kbArticleContent = "Knowledge Base Article Content",
			kbArticleTitle = "Knowledge Base Article Title"
		);

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		KBArticle.viewViaKBDisplayPG(
			kbArticleContent = "Knowledge Base Article Content",
			kbArticleTitle = "Knowledge Base Article Title"
		);

		KBArticle.configureKBSocialBookmarkSites(
			enableSocialBookmarkSites = "${socialBookmarkSites}"
		);

		Navigator.gotoPage(pageName = "Knowledge Base Display Page");

		for (var socialBookmarkSites : list "Twitter,Facebook,AddThis,LinkedIn,Delicious,Digg,Evernote,Newsvine,Reddit,Slashdot,StumbleUpon,Tuenti") {
			KBArticle.viewEnabledKBSocialBookmarkSites(
				socialBookmarkSite = "${socialBookmarkSites}"
			);
		}
	}
}