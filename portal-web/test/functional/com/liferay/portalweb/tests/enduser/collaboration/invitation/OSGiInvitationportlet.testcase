@component-name = "portal-plugins-osgi"
definition {
	property osgi.app.includes = "invitation";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property testray.main.component.name = "Invite Members";
	property test.assert.warning.exceptions = "true";

	setUp {
		User.firstLoginPG();

		Page.add(pageName = "Test Page");
	}

	tearDown {
		Page.tearDownPG();
	}

	@priority = "4"
	test InvitationPortletSmoke {
		property portal.release = "true";
		var appName = "Invitation";

		Navigator.gotoPage(pageName = "Test Page");

		Portlet.addPG(portletName = "Invitation");
	}
}