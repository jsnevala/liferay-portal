@component-name = "portal-plugins-osgi"
definition {
	property dummy.socket.proxy.disabled = "true";
	property osgi.app.includes = "twitter";
	property portal.release = "true";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property testray.main.component.name = "Social Networking";
	property test.assert.warning.exceptions = "true";

	setUp {
		User.firstLoginPG();

		Page.add(pageName = "Test Page");
	}

	tearDown {
		Page.tearDownPG();
	}

	@priority = "4"
	test TwitterPortletSmoke {
		var appName = "Twitter";

		Navigator.gotoPage(pageName = "Test Page");

		Portlet.addPG(portletName = "Twitter");

		AntCommand.antCommand(
			locator1 = "build-test.xml",
			value1 = "remove-plugin -Dplugin.name=twitter-portlet"
		);
	}

	@priority = "5"
	test ViewEntry {
		property test.name.skip.portal.instance = "OSGiTwitterportlet#ViewEntry";

		UserBar.gotoProfile();

		Portlet.addPG(portletName = "Twitter");

		Twitter.configureUserProfile(twitterProfileName = "liferayqa3");

		Pause(locator1 = "1000");

		Refresh();

		Twitter.viewConfiguredScreenName(twitterProfileName = "liferayqa3");

		Portlet.addPG(portletName = "Activities");

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "System Settings"
		);

		SystemSettings.gotoCategory(category = "Other");

		SystemSettings.editConfiguration(configurationName = "Twitter Service");

		Type(locator1 = "TextInput#TWITTER", value1 = "1");

		SystemSettings.saveConfiguration();

		UserBar.gotoProfile();

		Pause(locator1 = "60000");

		Refresh();

		Twitter.viewFeedEntry(entryContent = "This is a tweet sent on Twitter.");
	}
}