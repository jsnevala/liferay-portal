@component-name = "portal-util-misc"
definition {
	property osgi.app.includes = "dictionary";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Util";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Page.add(pageName = "Dictionary Page");

		Navigator.gotoPage(pageName = "Dictionary Page");

		Portlet.addPG(portletName = "Dictionary");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@priority = "2"
	test FindDictionaryWord {
		var siteName = TestCase.getSiteName(siteName = "${siteName}");

		Navigator.gotoPage(pageName = "Dictionary Page");

		Dictionary.findPG(dictionaryWord = "dog");

		SelectWindow(locator1 = "title=Dog | Define Dog at Dictionary.com");

		AssertTextEquals(
			locator1 = "Portlet#WORD",
			value1 = "dog",
			key_dictionaryTerm = "dog"
		);

		Close(locator1 = "title=Dog | Define Dog at Dictionary.com");

		SelectWindow(locator1 = "title=Dictionary Page - ${siteName}");
	}
}