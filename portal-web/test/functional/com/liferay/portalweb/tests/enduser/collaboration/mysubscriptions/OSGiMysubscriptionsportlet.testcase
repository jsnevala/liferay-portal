@component-name = "portal-plugins-osgi"
definition {
	property osgi.app.includes = "my-subscriptions";
	property portal.release = "true";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property testray.main.component.name = "My Subscriptions";

	setUp {
		User.firstLoginPG();

		Page.add(pageName = "Test Page");
	}

	tearDown {
		Page.tearDownPG();
	}

	@priority = "4"
	test MySubscriptionsPortletSmoke {
		var appName = "My Subscriptions";

		Navigator.gotoPage(pageName = "Test Page");

		Portlet.addPG(portletName = "My Subscriptions");

		Page.gotoMyAccount(portletName = "My Subscriptions");

		AntCommand.antCommand(
			locator1 = "build-test.xml",
			value1 = "remove-plugin -Dplugin.name=my-subscriptions-portlet"
		);
	}
}