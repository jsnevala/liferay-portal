@component-name = "portal-plugins-osgi"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property testray.main.component.name = "Wiki";

	setUp {
		User.firstLoginPG();

		Page.add(pageName = "Test Page");
	}

	tearDown {
		Page.tearDownPG();
	}

	@priority = "4"
	test WikiNavigationPortletSmoke {
		var appName = "Wiki Navigation";

		Navigator.gotoPage(pageName = "Test Page");

		Portlet.addPG(portletName = "Page Menu");

		Navigator.gotoPage(pageName = "Test Page");

		Portlet.addPG(portletName = "Tree Menu");

		AntCommand.antCommand(
			locator1 = "build-test.xml",
			value1 = "remove-plugin -Dplugin.name=wiki-navigation-portlet"
		);
	}
}