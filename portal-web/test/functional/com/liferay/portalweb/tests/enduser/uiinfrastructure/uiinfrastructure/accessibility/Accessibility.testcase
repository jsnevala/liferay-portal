@component-name = "portal-user-interface"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.component.names = "Accessibility";
	property testray.main.component.name = "User Interface";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@priority = "3"
	test Smoke {
		Page.add(pageName = "Test Page1");

		Navigator.gotoPage(pageName = "Test Page1");

		Portlet.addPG(portletName = "Web Content Display");

		WebContent.addPGViaWCD(
			webContentContent = "Web Content Content",
			webContentTitle = "Web Content Title"
		);

		SignOut.signOut();

		Navigator.gotoPage(pageName = "Test Page1");

		AssertAccessible();
	}

	@ignore = "true"
	@priority = "4"
	test ViewCollaborationPortlets {
		property osgi.app.includes = "invitation, knowledge-base, twitter";
		property plugins.deployment.type = "osgi";

		Page.add(pageName = "Collaboration Page");

		Navigator.gotoPage(pageName = "Collaboration Page");

