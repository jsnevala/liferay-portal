@component-name = "portal-util-misc"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Util";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Page.add(pageName = "Quick Note Page");

		Navigator.gotoPage(pageName = "Quick Note Page");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@priority = "2"
	test AddQuickNote {
		var portletName = "Quick Note";

		Click.clickAtSidebarClickAtWaitForScript(locator1 = "ControlMenu#ADD");

		Panel.expandSidebarApplicationsPanel();

		Type.sendKeysApplicationSearch(
			locator1 = "NavBar#APPLICATION_SEARCH_FIELD",
			value1 = "${portletName}"
		);

		var portletLocator = "//span[@data-title=&quot;${portletName}&quot; and contains(@class,&apos;add-content-item&apos;)]";

		AssertClick.pauseMakeVisibleAssertTextEqualsClickAt(
			locator1 = "${portletLocator}",
			value1 = "Add"
		);

		Navigator.gotoPage(pageName = "Quick Note Page");

		QuickNote.addPG(noteContent = "Test Note Content");
	}
}