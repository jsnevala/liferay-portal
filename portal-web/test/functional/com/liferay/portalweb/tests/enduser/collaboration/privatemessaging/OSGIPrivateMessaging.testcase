@component-name = "portal-plugins-osgi"
definition {
	property osgi.app.includes = "social-private-messaging";
	property portal.release = "true";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property testray.main.component.name = "Private Messaging";

	setUp {
		User.firstLoginPG();
	}

	tearDown {
		Page.tearDownPG();
	}

	@priority = "4"
	test PrivateMessagingSmoke {
		UserBar.gotoDashboard();

		Portlet.addPG(portletName = "Private Messaging");
	}
}