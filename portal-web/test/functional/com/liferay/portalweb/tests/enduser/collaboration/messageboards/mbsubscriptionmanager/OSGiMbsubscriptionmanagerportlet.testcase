@component-name = "portal-plugins-osgi"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property testray.main.component.name = "Message Boards";

	setUp {
		User.firstLoginPG();
	}

	@priority = "4"
	test MBSubscriptionManagerPortletSmoke {
		property portlet.plugins.includes = "mb-subscription-manager-portlet";
		var appName = "Message Boards Subscription Manager";

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Site Administration",
			portlet = "Message Boards Subscription Manager"
		);

		AntCommand.antCommand(
			locator1 = "build-test.xml",
			value1 = "remove-plugin -Dplugin.name=my-subscriptions-portlet"
		);
	}
}