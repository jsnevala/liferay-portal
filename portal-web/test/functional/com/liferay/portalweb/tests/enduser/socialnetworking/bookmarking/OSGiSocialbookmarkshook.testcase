@component-name = "portal-plugins-osgi"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property plugins.deployment.type = "osgi";
	property osgi.app.includes = "social-bookmarks";
	property testray.main.component.name = "Social Networking";

	setUp {
		User.firstLoginPG();
	}

	@priority = "4"
	test SocialBookmarksHookSmoke {
		var appName = "Social Bookmarks";
		var portletName = "social-bookmarks-hook";

		OSGiSmoke.Smoke(appName = "${portletName}", portletName = "${portletName}");
	}
}