definition {

	macro editPermission {
		var portalURL = JSONCompany.getPortalURL();

		var roleId = JSONRole.getRoleIdByName(roleName = "${roleName}");

		var companyId = JSONCompany.getCompanyId();

		var groupId = JSONGroup.getGroupIdByName(groupName = "${groupName}");

		var curl = '''
			${portalURL}/api/jsonws/resourcepermission/${method} \
				-u test@liferay.com:test \
				-d groupId=${groupId} \
				-d companyId=${companyId} \
				-d name=${resourceName} \
				-d scope=1 \
				-d primKey=${companyId} \
				-d roleId=${roleId} \
				-d actionId=${resourceAction}
		''';

		com.liferay.poshi.runner.util.JSONCurlUtil.post("${curl}");
	}
}