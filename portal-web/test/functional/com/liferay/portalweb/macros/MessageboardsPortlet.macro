	macro viewAnonymousPostingConfigurationCP {
		IFrame.selectConfigurationFrame();

		if ("${anonymousPostingEnabled}" == "true") {
			AssertChecked(
				locator1 = "MessageBoardsAdminConfiguration#GENERAL_ALLOW_ANONYMOUS_POSTING_CHECKBOX"
			);
		}
		else if ("${anonymousPostingEnabled}" == "false") {
			AssertNotChecked(
				locator1 = "MessageBoardsAdminConfiguration#GENERAL_ALLOW_ANONYMOUS_POSTING_CHECKBOX"
			);
		}
	}

	macro viewBannedUserPG {
		AssertClick(
			locator1 = "MessageBoards#NAVIGATION_BANNED_USERS",
			value1 = "Banned Users"
		);

		var key_userScreenName = "${userScreenName}";

		AssertTextEquals(
			locator1 = "UsersAndOrganizations#USER_TABLE_FIRST_NAME_LINK",
			value1 = "${userScreenName}"
		);

		AssertTextEquals(
			locator1 = "UsersAndOrganizations#USER_TABLE_USER_NAME",
			value1 = "Test Test"
		);

		AssertVisible(locator1 = "UsersAndOrganizations#USER_TABLE_SCREEN_NAME");

		AssertVisible(
			locator1 = "MessageBoardsBannedUsers#BANNED_USERS_TABLE_UNBAN_DATE"
		);

		AssertElementPresent(
			locator1 = "MessageBoardsBannedUsers#BANNED_USERS_TABLE_UNBAN_THIS_USER"
		);

		AssertClick(
			locator1 = "UsersAndOrganizations#USER_TABLE_FIRST_NAME_LINK",
			value1 = "${userScreenName}"
		);

		var key_siteName = "${userScreenName}";

		AssertTextEquals(locator1 = "SitePages#SITE_NAME", value1 = "${userScreenName}");
	}

