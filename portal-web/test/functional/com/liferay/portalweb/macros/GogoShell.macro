definition {
	macro getModuleID {
		GogoShell.listModuleStatus(moduleName = "${moduleName}");

		AssertElementPresent(locator1 = "GogoShell#OUTPUT_FIELD");

		var moduleStatusOutput = selenium.getText("GogoShell#OUTPUT_FIELD");
		var partialModuleStatusOutput = StringUtil.stripBetween("${moduleStatusOutput}", "START", "Name   ");
		var moduleID = StringUtil.extractFirst("${partialModuleStatusOutput}", "|");

		return "${moduleID}";
	}

	macro listModuleStatus {
		Type(locator1 = "GogoShell#COMMAND_FIELD", value1 = "lb ${moduleName}");

		AssertClick(locator1 = "GogoShell#EXECUTE_BUTTON", value1 = "Execute");
	}

	macro startModule {
		Type(locator1 = "GogoShell#COMMAND_FIELD", value1 = "start ${moduleID}");

		AssertClick(locator1 = "GogoShell#EXECUTE_BUTTON", value1 = "Execute");
	}

	macro stopModule {
		Type(locator1 = "GogoShell#COMMAND_FIELD", value1 = "stop ${moduleID}");

		AssertClick(locator1 = "GogoShell#EXECUTE_BUTTON", value1 = "Execute");
	}

	macro viewModuleStatus {
		GogoShell.listModuleStatus(moduleName = "${moduleName}");

		AssertTextEquals.assertPartialText(
			locator1 = "GogoShell#OUTPUT_FIELD",
			value1 = "${moduleStatus}"
		);
	}
}