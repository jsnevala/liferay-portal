@default = "click"
@summary = "Click on '${locator1}'"
definition {
	function click {
		WaitForSPARefresh();

		selenium.waitForVisible();

		selenium.mouseOver();

		selenium.click();
	}

	function clickNoMouseOver {
		WaitForSPARefresh();

		selenium.waitForVisible();

		selenium.click();
	}

	function waitForMenuToggleJSClick {
		selenium.waitForElementPresent(
			"//script[contains(@src,'/o/frontend-js-web/liferay/menu_toggle.js')]"
		);

		selenium.pause("3000");

		Click();
	}
}